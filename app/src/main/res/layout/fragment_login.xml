<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controlers.LoginFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingLeft="34dp"
        android:paddingRight="34dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent"
            android:fontFamily="@font/source_sans_pro_regular"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                >


                <TextView
                    android:id="@+id/allocation_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"

                    android:background="#ffffff"
                    android:fontFamily="@font/source_sans_pro_bold"
                    android:letterSpacing="0.18"
                    android:maxLines="1"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:text="@string/app_name"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="#FE6F7A"
                    android:textSize="30sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_alignStart="@id/allocation_title"
                    android:layout_below="@id/allocation_title"
                    android:background="#ffffff"
                    android:fontFamily="@font/source_sans_pro_regular"
                    android:text="@string/login_welcome"
                    android:textSize="13sp"
                    android:textColor="#8890A6"
                    />

            </RelativeLayout>



            <EditText
                style="@style/Widget.AppCompat.EditText"
                android:id="@+id/username"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="35dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:autofillHints="Username"
                android:inputType="text"
                android:hint="@string/user_name"
                tools:ignore="LabelFor"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:background="@drawable/input"
                android:textSize="15sp"

                >
            </EditText>

            <EditText
                style="@style/Widget.AppCompat.EditText"
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:autofillHints="Password"
                android:inputType="textPassword"
                android:layout_marginBottom="45dp"
                android:hint="@string/password"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:background="@drawable/input"
                android:textSize="15sp"
                >
            </EditText>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:layout_marginBottom="60dp"
                android:gravity="center_vertical"
                >

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:gravity="center_vertical"
                    >
                    <CheckBox
                        android:id="@+id/rememberMeCheck"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="15dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/remember_me"
                        android:textSize="15sp"
                        android:textColor="#8890A6"
                        android:textAlignment="textStart"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:id="@+id/forgotPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/forgot_password"
                        android:textSize="15sp"
                        android:textColor="#8890A6"
                        android:textAlignment="textEnd"

                        />
                </LinearLayout>




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp">

                    <Button
                        android:id="@+id/loginBtn"
                        android:layout_width="140dp"
                        android:layout_height="50dp"
                        android:text="@string/login"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:background="@drawable/square_btn"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF"
                        android:textAllCaps="false"
                        android:lineHeight="25dp"
                        >
                    </Button>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end"
                    >

                    <Button
                        android:id="@+id/signUp"
                        android:layout_width="140dp"
                        android:layout_height="50dp"
                        android:text="@string/sign_up"
                        android:background="@drawable/square_btn"
                        android:textSize="18sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textAllCaps="false"
                        android:lineHeight="25dp"


                        >
                    </Button>

                </LinearLayout>




            </LinearLayout>






        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/term_of_use"
            android:layout_alignParentBottom="true"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textColor="@color/colorPrimaryDark"
            />

    </RelativeLayout>

</FrameLayout>